<!-- Content heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- Message block -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>

<div class="management-view">
  <h1>Welcome <%= account_firstname %></h1>
  <p>You're logged in.</p>
  <a href="/account/update">Edit Account Information</a>
  <% if (locals.accountData.account_type == "Admin" || locals.accountData.account_type == "SuperAdmin") { %>
    <h1>Edit User Accounts</h1>
    <div id="class-label">
      <label for="account_type" id="accountType">Choose an account type to see the users.</label>
      <select id="account_type" name="account_type">
        <%- accountSelect %></select>
    </div>
  <table id="accountDisplay"></table>

  <% } %>
  <% if (locals.accountData.account_type == "Admin" || locals.accountData.account_type == "Employee" || locals.accountData.account_type == "SuperAdmin") { %>
    <h1>Inventory Management</h1>
    <a href="/inv">Management Inventory</a>
  <% } %>
</div>

<noscript>JavaScript must be enabled to use this page.</noscript>

<script src="../../js/management.js"></script>