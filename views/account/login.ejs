<!-- Content heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- Message block -->
<%- messages() %>

<% if (locals.errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>
  
<!-- Form -->
<div class="form">
  <form id="loginForm" action="/account/login" method="post">
    <fieldset>
      <legend>Login</legend>
      <div class="information">
        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" title="Your email address" autocomplete="email" required value="<%= locals.account_email %>">
        
        <label for="account_password">Password:</label>
        <input type="password" id="account_password" name="account_password" title="Password must be at least 12 characters, contain at least 1 capital letter, contain at least 1 number, and contain at least 1 special character." autocomplete="current-password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <span id="show-password">Show Password</span>
        
        <input type="submit" value="Login">
        <p class="register">No account? 
        <a href="/account/register">Sign-up</a>
        </p>
      </div>
    </fieldset>
  </form>
</div>
