<!-- Content heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- Message block -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>

<!-- Form -->
<div class="form">
  <form action="/inv/delete/" method="post" id="deleteForm">
    <fieldset>
      <legend>Delete Inventory</legend>
      <div class="information">
        <p class="required-fields">Confirm Deletion - The delete is permanent.</p>
        <label for="inv_make">Make</label>
        <input type="text" id="inv_make" name="inv_make" title="Make of vehicle" placeholder="Min of 3 characters" minlength="3" required value="<%= locals.inv_make %>">

        <label for="inv_model">Model</label>
        <input type="text" id="inv_model" name="inv_model" title="Model of vehicle" placeholder="Min of 3 characters" minlength="3" required value="<%= locals.inv_model %>">
        
        <label for="inv_price">Price</label>
        <input type="number" id="inv_price" name="inv_price" title="Price of the vehicle" placeholder="decimal or integer" required step="any" value="<%= locals.inv_price %>">

        <label for="inv_year">Year</label>
        <input type="number" id="inv_year" name="inv_year" min="1000" max="9999" title="Year of the vehicle" placeholder="4-digit year" required step="1" value="<%= locals.inv_year %>">

        <input type="submit" name="submit" value="Delete Vehicle">
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
      </div>
    </fieldset>
  </form>
</div>
